---
import LogoVideo from "@/assets/videos/LogoVideo.mp4";
import Location from "@/icons/Location.astro";
import Phone from "@/icons/Phone.astro";
import Mail from "@/icons/Mail.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import Facebook from "@/icons/Facebook.astro";
import Tiktok from "@/icons/Tiktok.astro";
import Instagram from "@/icons/Instagram.astro";
---

<footer
  class="w-full flex flex-col items-center items bg-primary text-brand-secondary"
>
  <section
    class="w-full flex flex-col gap-y-4 gap-x-2 md:flex-row lg:flex-nowrap lg:justify-between pb-5 pt-10 px-[4%]"
  >
    <section class="w-full lg:w-[30%]">
      <a href="#first-section" class="w-full lg:w-4/5 block rounded-[1px]">
        <video
          class="w-full h-20 lg:h-28 object-cover object-center"
          autoplay
          loop
          muted
        >
          <source src={LogoVideo} type="video/mp4" />
          Tu buscador web no soporta tags de video
        </video>
      </a>
      <span
        class="flex flex-row flex-nowrap items-center gap-x-2 mt-3"
      >
        <Location width={"20px"} height={"20px"} />
        <small class="break-words text-sm lg:text-base"
          >Km 13.8 c.sur entrada a la muela 200 mtrs E. 25vrs al sur</small
        >
      </span>
    </section>

    <section class="w-full lg:w-[30%]">
      <h1 class="merry text-base lg:text-lg font-semibold mb-2">
        Comunícate con nosotros
      </h1>
      <div class="flex flex-row flex-wrap items-center gap-x-1">

        <a href="tel:+50589157856" class="flex flex-row flex-nowrap items-center">
          <Phone />
          <span class="text-sm lg:text-base">+505 8915-7856</span>
        </a>

        <a href="tel:+50589157856" class="flex flex-row flex-nowrap items-center">
          <Phone />
          <span class="text-sm lg:text-base">+505 8611-0012</span>
        </a>

        <a href="tel:+50589157856" class="flex flex-row flex-nowrap items-center">
          <Phone />
          <span class="text-sm lg:text-base">+505 8611-0612</span>
        </a>
      </div>
      <div class="flex flex-row flex-wrap gap-x-0.5 mt-2 items-center">
        
        <Mail/>
        <a
          href="mailto:ventas@serviciosmultiples.pro?subject=Consulta%20acerca%20de%20Productos"
          class="md:text-sm lg:text-base break-all"
          >ventas@serviciosmultiples.pro</a
        >
      </div>
    </section>

    <section class="w-full lg:w-[30%]">
      <h1 class="merry text-base lg:text-lg font-semibold mb-2">Síguenos en</h1>
      <div class="flex flex-row flex-wrap items-center gap-2 lg:gap-4">
        <a
          href="https://www.linkedin.com/company/servicios-multiples-nicaragua/"
          target="_blank"
          class="footer-icon"
          ><LinkedIn width={"20px"} height={"20px"} />
        </a>
        <a
          href="https://www.facebook.com/bfsolutions.site"
          target="_blank"
          class="footer-icon"><Facebook width={"20px"} height={"20px"} /></a
        >
        <a
          href="https://www.tiktok.com/@ventas.servimulti88?_t=8qO2EJ5jfxG&_r=1"
          target="_blank"
          class="footer-icon"
          ><Tiktok width={"20px"} height={"20px"} />
        </a>
        <a
          href="https://www.instagram.com/serviciosmultiplesnicaragua?igsh=dWw0cTRwYjU5bXJ5"
          target="_blank"
          class="footer-icon"
          ><Instagram width={"20px"} height={"20px"} />
        </a>
      </div>
    </section>
  </section>
  <span class="mb-3">© 2024 Servicios Multiples</span>
</footer>

<script>
  function resizeHandler() {
    let innerWidth = window.innerWidth;
    let footerIcons = document.getElementsByClassName("footer-icon");
    for (let icon of footerIcons) {
      if (innerWidth < 720) {
        icon.children[0].setAttribute("width", "20px");
        icon.children[0].setAttribute("height", "20px");
      } else if (innerWidth < 1240) {
        icon.children[0].setAttribute("width", "25px");
        icon.children[0].setAttribute("height", "25px");
      } else {
        icon.children[0].setAttribute("width", "30px");
        icon.children[0].setAttribute("height", "30px");
      }
    }
  }
  function handleEvents() {
    window.addEventListener("resize", resizeHandler);
  }

  handleEvents(); // Used for the first navigation
  resizeHandler();
</script>
