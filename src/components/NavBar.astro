---
import { Image } from "astro:assets";
import logoImage from "@/assets/images/imageLogo.png";
import HamburgerMenu from "@/icons/HamburgerMenu.astro";
---

<nav
  class="py-2 px-3 bg-brandBg backdrop-blur rounded-full fixed top-2 left-0 w-full lg:w-[96%] lg:left-1/2 lg:-translate-x-1/2 z-50"
  id="navBar"
>
  <ul class="flex justify-between items-center poppins">
    <li>
      <a href="./" class="flex flex-row flex-nowrap items-center gap-1">
        <Image
          class={"w-10 lg:w-14 h-10 lg:h-14 object-center ml-3"}
          src={logoImage}
          alt={"logo"}
        />
        <h1 class="leading-5 arimo text-base lg:text-lg font-semibold">
          SERVICIOS<br />MULTIPLES
        </h1>
      </a>
    </li>

    <li class="w-1/3">
      <ul class="lg:flex w-full justify-around hidden" id="nav-li-group">
        <li><a href="./#first-section" class="text-[black]">Inicio</a></li>
        <li><a href="./products" class="text-[black]">Productos</a></li>
        <li><a href="./products" class="text-[black]">Agregar Productos</a></li>
        <!-- <li><a href="./contactus" class="text-[black]">Contáctanos</a></li>
        <li><a href="./us" class="text-[black]">Nosotros</a></li>      -->
      </ul>

      <ul
        class="flex flex-col items-end lg:hidden text-sm"
        id="nav-li-hamburger"
      >
        <button class="w-[30px] h-[30px] mr-1" id="hamburger-menu">
          <HamburgerMenu width="30px" height="30px" />
        </button>

        <div class="hidden mr-4">
          <button class="font-bold text-lg" id="close-spread-menu"> x </button>
          <li><a href="./#first-section" class="text-[black]">Inicio</a></li>
          <li><a href="./us" class="text-[black]">Nosotros</a></li>
          <li><a href="./products" class="text-[black]">Productos</a></li>
          <li><a href="./contactus" class="text-[black]">Contáctanos</a></li>
        </div>
      </ul>
    </li>
  </ul>
</nav>

<script>
  // You can add a script to listen for the resize event
  const hamburgerMenu = document.getElementById("hamburger-menu");
  const xIcon = document.getElementById("close-spread-menu");

  hamburgerMenu?.addEventListener("click", () => {
    hamburgerMenu.classList.add("hidden");
    xIcon?.parentElement?.classList.remove("hidden");
  });

  xIcon?.addEventListener("click", () => {
    hamburgerMenu?.classList.remove("hidden");
    xIcon?.parentElement?.classList.add("hidden");
  });
</script>
